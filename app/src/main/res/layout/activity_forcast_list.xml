<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="200dp"
    android:orientation="horizontal"
    tools:context=".ForcastList"

    >

    <ImageView
        android:id="@+id/forcast_image"
        android:layout_width="93dp"
        android:layout_height="114dp" />

    <LinearLayout
        android:layout_width="336dp"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/forcast_condition"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:hint="@string/forcast_condition"
            android:textColor="#FFFFFF"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/maxtemp_c"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:hint="@string/forcast_temp"
            android:textColor="#DAC71E"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/daily_chance_of_rain"
            android:layout_width="331dp"
            android:layout_height="20dp"
            android:hint="@string/rain_probahilty"
            android:textColor="#B7A8FB"
            tools:text="fdgdgdg" />

        <TextView
            android:id="@+id/maxwind_kph"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#BFB3F8" />

        <TextView
            android:id="@+id/date_textbox"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:textColor="#938CB5" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="342dp"
        android:layout_height="match_parent"
        android:orientation="vertical"/>

</LinearLayout>